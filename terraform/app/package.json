{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "terraform-aws-webapp-setup",
  "version": "1.0.0",
  "description": "Simple Node.js web application deployed on AWS",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "node",
    "express",
    "aws",
    "terraform",
    "cicd"
  ],
  "author": "Wisdom",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.919.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  }
}